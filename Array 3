#include<stdio.h>
int main() {
	int arr[]={2,53,3,7,42,6};
	int size=sizeof arr/sizeof arr[0];
	int max=arr[0];
	int index=0;
	for(int i=0;i<=size;i++)
	{
       if(arr[i]>max)
	   {
       	max=arr[i];
       	index=i;
	   }		  
	}
	printf("The max element is %d\n",max);
	printf("The max index of element is %d\n ",index);
	
	return 0;
}
